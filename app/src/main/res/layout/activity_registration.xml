<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:background="@drawable/musical"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".RegistrationActivity">

    <!-- TextView for heading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:textSize="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#1F305E"
        android:textStyle="bold"
        android:text="Register" />



    <!-- Edit text for email -->
    <EditText
        android:fontFamily="@font/pacificoregular"
        android:id="@+id/email"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#A4DDED"

        android:minHeight="48dp"
        android:padding="10dp"
        android:hint="Enter your Email" />

    <!-- Edit text for password -->
    <EditText
        android:fontFamily="@font/pacificoregular"
        android:id="@+id/passwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#A4DDED"

        android:minHeight="48dp"
        android:padding="10dp"
        android:hint="Enter your Password"
        android:inputType="textPassword" />


    <!-- Button for register with text "Register" -->
    <Button
        android:id="@+id/btnregister"
        android:fontFamily="@font/pacificoregular"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint="#5072A7"

        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Register" />

    <!-- ProgressBar for loading time -->
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />


</LinearLayout>